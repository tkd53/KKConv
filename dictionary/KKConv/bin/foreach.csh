#-------------------------------------------------------------------------------------
#                        check arguments
#-------------------------------------------------------------------------------------

if ($#argv != 1) then
    echo "Usage: $0 (DIRE)"
    exit(1)
endif

set DIRE = $1;


#-------------------------------------------------------------------------------------
#                        set variables
#-------------------------------------------------------------------------------------

#set PROG = ../bin/ME-apply.csh
set PROG = ../bin/temp-ME-apply.csh


#-------------------------------------------------------------------------------------
#                        main
#-------------------------------------------------------------------------------------

echo ===== $HOST $$ ================================================================

#foreach FILE ( ../MNN-corpus/*.text )
#foreach FILE ( ../SKN-corpus/*.text )
#foreach FILE ( $DIRE/*/??? )
#foreach FILE ( $DIRE/*.text )
foreach FILE ( $DIRE/??? )
    if ((-r $FILE) && (! -e $FILE:r.log)) then
        echo ----- $FILE -------------------------------------------------------------
        $PROG $FILE > & $FILE:r.log
        echo
    endif
end


#-------------------------------------------------------------------------------------
#                        close
#-------------------------------------------------------------------------------------

echo Done $0
exit


