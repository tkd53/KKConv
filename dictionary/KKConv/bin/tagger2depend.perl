#!/usr/bin/env perl
use bytes;
#=====================================================================================
#                        tagger2depend.perl
#                             by Shinsuke MORI
#                             Last change : 18 November 2001
#=====================================================================================

# 機  能 : 形態素解析の結果を .depend の形式に変換する。
#
# 使用法 : tagger2depend.perl [filename ...]
#
# 実  例 : tagger2depend.perl EHJ.tagger
#
# 注意点 : なし


#-------------------------------------------------------------------------------------
#                        require
#-------------------------------------------------------------------------------------

use Env;
use File::Basename;
unshift(@INC, dirname($0), "$HOME/usr/lib/perl"); # スクリプトのパスを @INC に加える

require "Help.pm";


#-------------------------------------------------------------------------------------
#                        check arguments
#-------------------------------------------------------------------------------------

($ARGV[0] eq "-help") && &Help($0);


#-------------------------------------------------------------------------------------
#                        set variables
#-------------------------------------------------------------------------------------

$FILE = "EHJ";


#-------------------------------------------------------------------------------------
#                        main
#-------------------------------------------------------------------------------------

while (<>){
    s/(\d{6}IN|IN|EX|UM)//g;
    s/ [\d\.]+$//;
    @morp = split;
    printf("%s:ID=%d\n", $FILE, $.);
    for ($i = 0; $i < @morp; $i++){
        printf("%03d %03d %s\n", $i, $i+1, $morp[$i]);
    }
    print "\n";
}


#-------------------------------------------------------------------------------------
#                        close
#-------------------------------------------------------------------------------------

exit(0);


#=====================================================================================
#                        END
#=====================================================================================
