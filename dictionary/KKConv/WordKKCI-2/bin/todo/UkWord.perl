#!/usr/bin/env perl
#=====================================================================================
#                       UkWord.perl
#                             bShinsuke Mori
#                             Last change 14 July 2009
#=====================================================================================

# 機  能 : 各コーパスに含まれる未知語を出力する。
#
# 使用法 : UkWord.perl (STEP)
#
# 実  例 : UkWord.perl 4
#
# 注意点 : (filestem).morp は "表記/品詞 ..." となっていなければならない。
#          行数が 4**ARGV[0] で割り切れる文だけを対象とする。
#          Code は @PartCode の要素(Josi, Mesi など)であること。


#-------------------------------------------------------------------------------------
#                        require
#-------------------------------------------------------------------------------------

use Env;
use File::Basename;
unshift(@INC, dirname($0), "$TKD53HOME/lib/perl");

require "Help.pm";
require "class/IntStr.pm";


#-------------------------------------------------------------------------------------
#                        check arguments
#-------------------------------------------------------------------------------------

((@ARGV == 1) && ($ARGV[0] ne "-help")) || &Help($0);
print STDERR join(" ", basename($0), @ARGV), "\n";


#-------------------------------------------------------------------------------------
#                        set variables
#-------------------------------------------------------------------------------------

$STEP = 4**shift;                                 # 学習コーパスの文のステップ


#-------------------------------------------------------------------------------------
#                        共通の変数や関数の定義を読み込む
#-------------------------------------------------------------------------------------

do "dofile/CrossEntropyBy.perl";
do "dofile/CrossEntropyByWordKKCI.perl";
do "dofile/KKConvSetVariables.perl";


#-------------------------------------------------------------------------------------
#                        $WordIntStr の生成
#-------------------------------------------------------------------------------------

$WordIntStr = new IntStr("WordIntStr.text");


#-------------------------------------------------------------------------------------
#                        main
#-------------------------------------------------------------------------------------

foreach $n (@Kcross){
    $FILE = sprintf($CTEMPL, $n);
    open(FILE) || die "Can't open $FILE: $!\n";
    warn $FILE, "\n";
    while (<FILE>){
        next if (($.%$STEP != 0) && ($n != 10));
        foreach $unit (&Line2Units($_)){          # [表記/読み] 単位のループ
            ($word, $kkci) = split("/", $unit);
            next if ($WordIntStr->int($word));
            printf("%s/%s\n", $word, $kkci);
        }
    }
    close(FILE);
}


#-------------------------------------------------------------------------------------
#                        exit
#-------------------------------------------------------------------------------------

exit(0);


#=====================================================================================
#                        END
#=====================================================================================
