# 実験用スクリプト


#-------------------------------------------------------------------------------------
#                        check arguments
#-------------------------------------------------------------------------------------

if ($#argv != 2) then
    echo "Usage: $0 (WDIR) (STEM)"
    exit(1)
endif


#-------------------------------------------------------------------------------------
#                        setvariables
#-------------------------------------------------------------------------------------

set WDIR = $argv[1]
set STEM = $argv[2]


#-------------------------------------------------------------------------------------
#                        言語モデルのリンク
#-------------------------------------------------------------------------------------

foreach FILE ( CharIntStr.text CharLambda CharMarkov.db \
               WordIntStr.text WordLambda WordMarkov.db \
               $STEM.btprob $STEM.lambda $STEM.sarray $STEM.text )
    ln -f -s "../../../Word-2/$WDIR/$FILE"
end


#-------------------------------------------------------------------------------------
#                        リンク
#-------------------------------------------------------------------------------------

foreach FILE ( YomiIntStr.text YomiLambda YomiMarkov.db \
               InDict.dadata InDict.datran ExDict.dadata ExDict.datran )
    ln -f -s "../Step0/$FILE"
end


#-------------------------------------------------------------------------------------
#                        close
#-------------------------------------------------------------------------------------

echo Done $0
exit


